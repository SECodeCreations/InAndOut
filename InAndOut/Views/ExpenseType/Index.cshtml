@model IEnumerable<InAndOut.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="ExpenseType" asp-action="Create">Add expense type</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenseType in Model)
                {
                <tr>
                    <td width="40%">@expenseType.ExpenseTypeName</td>                    
                    <td width="20%">
                        <a class="btn btn-primary mx-2" asp-controller="ExpenseType" asp-route-Id="@expenseType.Id" asp-action="Update">Update</a>
                        <a class="btn btn-danger mx-2" asp-controller="ExpenseType" asp-route-Id="@expenseType.Id" asp-action="Delete">Delete</a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>