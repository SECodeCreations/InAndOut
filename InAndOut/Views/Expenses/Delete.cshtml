@model InAndOut.Models.ViewModels.ExpenseVM

<form method="post" asp-action="DeletePost">
    <input asp-for="Expenses.Id" hidden />

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Expenses.ExpenseName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expenses.ExpenseAmount"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expenses.ExpenseType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Expenses.ExpenseName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Expenses.ExpenseAmount" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <select asp-for="Expenses.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                        </select>
                        <span asp-validation-for="Expenses.ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}