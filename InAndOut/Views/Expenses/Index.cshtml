@model IEnumerable<InAndOut.Models.Expenses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expenses" asp-action="Create">Add expense</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenses in Model)
                {
                <tr>
                    <td width="40%">@expenses.ExpenseName</td>
                    <td width="40%">£@expenses.ExpenseAmount</td>
                    <td width="20%">
                        <a class="btn btn-primary mx-2" asp-controller="Expenses" asp-route-Id="@expenses.Id" asp-action="Update">Update</a>
                        <a class="btn btn-danger mx-2" asp-controller="Expenses" asp-route-Id="@expenses.Id" asp-action="Delete">Delete</a>
                    </td>
                </tr>
                }
                <tr>
                    <td width="30%"><b>Total:</b></td>
                    <td width="70%" colspan="2"><b>£@Model.Sum(i => i.ExpenseAmount)</b></td>
                </tr>
            </tbody>

        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>